{
  "name": "musicman-cli",
  "description": "mp3 metadata manager",
  "type": "module",
  "main": "lib/cli.cjs",
  "scripts": {
    "dev": "nodemon --config ./nodemon.json lib/cli.cjs",
    "start": "node lib/cli.cjs",
    "start:stats": "node lib/cli.cjs stats",
    "daemon": "forever start lib/notify-daemon.cjs",
    "daemon:stop": "forever stop lib/notify-daemon.cjs",
    "profile": "ndb --prof npm run start",
    "lint": "esw lib test --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch --clear",
    "test": "NODE_ENV=test mocha",
    "test:watch": "NODE_ENV=test chokidar 'test/**/*.cjs' 'lib/**/*.cjs' -c 'node_modules/.bin/mocha'",
    "test:coverage": "NODE_ENV=test nyc mocha"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.5.0",
    "chokidar-cli": "^2.1.0",
    "copy-dir": "^1.3.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-watch": "^7.0.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.1",
    "sinon-chai": "^3.7.0"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "columnify": "git+https://github.com/njhoffman/columnify.git#nick",
    "diff": "^5.2.0",
    "flat": "^5.0.2",
    "forever": "^3.0.4",
    "glob": "^7.2.3",
    "lodash": "^4.17.21",
    "mp3-duration": "^1.1.0",
    "musicman-common": "file:../common",
    "node-id3": "0.1.13",
    "pretty-error": "^3.0.4",
    "prompt-confirm": "2.0.4",
    "sqlite3": "^5.1.7",
    "term-size": "^2.2.1"
  },
  "version": "1.2.0"
}
